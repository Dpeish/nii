/**index.wxss**/
page {
  height: 100%;
  background: #f5f5f5;
}

.container {
  width: 100%;
  height: 200rpx;
}

.slide-image {
  display: block;
  width: 100%;
  height: 200rpx;
}

/* 菜单 */
.icons {
  width: 100%;
  height: 420rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.icons .icon-item {
  box-sizing: border-box;
  float: left;
  width: 25%;
  height: 188rpx;
  padding: 20rpx;
  text-align: center;
}
.icon-item .icon-img {
  width: 100%;
}

.icon-item .icon-img-content {
  display: block;
  width: 124rpx;
  height: 124rpx;
  margin: 0 auto;
}

.icon-item .icon-desc {
  width: 100%;
  font-size: 28rpx;
}

/* 热门推荐 */
.hot-item-content {
  margin-bottom: 20rpx;
}

.item-title {
  padding: 22rpx 10rpx;
  font-size: 30rpx;
  color: #383838;
  background: #fff;
}

.hot-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eaeaea;
}

.hot-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.hot-imgs {
  display: block;
  width: 100%;
  height: 100%;
}

.hot-item-cell {
  flex: 1;
  min-width: 0;
  padding-right: 18rpx;
}

.hot-title {
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #333;
}

.hot-desc {
  line-height: 1;
  font-size: 30rpx;
  color: #626262;
  margin-bottom: 30rpx;
}

.text-em {
  color: #ff8300;
}

/* 周末去哪儿 */

.weekend-item {
  width: 100%;
  margin-bottom: 10rpx;
  background: #fff;
}

.weekend-item-img {
  overflow: hidden;
  width: 100%;
  height: 260rpx;
}

.weekend-item-img image {
  width: 100%;
  height: 260rpx;
}

.weekend-item-content {
  padding: 20rpx;
}

.week-title {
  font-size: 32rpx;
  color: #383838;
  margin-bottom: 10rpx;
}

.week-desc {
  font-size: 28rpx;
  color: #626262;
}