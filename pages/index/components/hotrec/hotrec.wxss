/* pages/index/components/hotrec/hotrec.wxss */

.fr {
  float: right;
}

/* 热门推荐 */
.hot-item-content {
  margin-bottom: 20rpx;
}

.item-title {
  padding: 22rpx 10rpx;
  font-size: 30rpx;
  color: #383838;
  background: #fff;
  border-bottom: 1rpx solid #eaeaea;
}

.hot-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eaeaea;
}

.hot-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.hot-imgs {
  display: block;
  width: 100%;
  height: 100%;
}

.hot-item-cell {
  flex: 1;
  min-width: 0;
  padding-right: 18rpx;
}

.hot-title {
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #333;
}

.hot-desc {
  line-height: 1;
  font-size: 30rpx;
  color: #626262;
  margin-bottom: 30rpx;
}

.text-em {
  color: #ff8300;
}