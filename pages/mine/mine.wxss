/* pages/mine/mine.wxss */
page {
  background: #f5f5f5;
}

.heade {
  position: relative;
  width: 100%;
  height: 320rpx;
  background: url('https://s.qunarzz.com/usercenter_mobile/images/my/mybgnew-20161111.jpg') no-repeat bottom;
  background-size: 100%;
  margin-bottom: 20rpx;
}

.header {
  position: absolute;
  width: 100%;
  top: 60rpx;
  text-align: center;
}

.header-btn {
  position: absolute;
  top: 0;
  z-index: 2;
  left: 50%;
  margin-left: -90rpx;
  width: 180rpx;
  height: 200rpx;
  background: transparent;
  border: none;
}

button::after{
  border:none;
}

.header-img-area {
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  width: 142rpx;
  height: 142rpx;
  margin-bottom: 8rpx;
  border-radius: 142rpx;
  background: rgba(255, 255, 255, .6);
  text-align: center;
  line-height: 142rpx;
}

.header-img {
  text-align:center;
  align-items:center;
  justify-content: center;
  margin: auto;
  width: 130rpx;
  height: 130rpx;
  border-radius: 130rpx;
}

.header-info {
  font-size: 30rpx;
  color: #fff;
}

.wallet {
  padding: 22rpx 20rpx;
  background: #fff;
  font-size: 32rpx;
  color: #4d4d4d;
  border-bottom: 1rpx solid #eee;
}

.wallet-icon {
  display: inline-block;
  width: 58rpx;
  height: 58rpx;
  margin-right: 16rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 24rpx;
  background: #ff7043;
  color: #fff;
}

.wallet-icon .icon-qianbao {
  font-size: 32rpx;
}

.money-item {
  display: flex;
  padding: 38rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.money-item-cell {
  flex: 1;
  text-align: center;
}

.money-title {
  font-size: 30rpx;
  color: #383838;
  margin-bottom: 10rpx;
}

.money-func {
  font-size: 26rpx;
  color: #888;
}

.text-samll {
  font-size: 20rpx;
  color: #888;
}

/* 功能列表 */

.menu-container {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  overflow: hidden;
  position: relative;
  padding: 22rpx 20rpx;
  background: #fff;
  font-size: 32rpx;
  color: #4d4d4d;
}

.menu-boreder-bot {
  position: absolute;
  left: 96rpx;
  bottom: 0;
  width: 100%;
  height: 0;
  border-bottom: 1px solid #eee;
}

.menu-item-icon {
  display: inline-block;
  width: 58rpx;
  height: 58rpx;
  margin-right: 16rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 24rpx;
  color: #fff;
}

.icon-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #888;
}

.icon-arrow-down-new {
  font-size: 38rpx;
}

.icon-order {
  background: #4fc3f7;
}

.icon-tuikuan {
  background: #ffa21f; 
}

.icon-fapiaos {
  background: #16c2c2;
}

.icon-gonglues {
  background: #9266f9; 
}

.icon-fankuis {
  background: #00bcd4;
}

.icon-guanyus {
  background: #00bcd4;
}

.menu-item-icon .iconfont {
  font-size: 32rpx;
}

