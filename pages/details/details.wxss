/* pages/details/details.wxss */
page {
  height: 100%;
  background: #f5f5f5;
}

.container {
  overflow: hidden;
  width: 100%;
  height: 412rpx;
}

.slide-image {
  display: block;
  width: 100%;
  height: 412rpx;
}

/* 简单介绍 */
.baseinfo {
  overflow: hidden;
  display: flex;
  width: 100%;
  background: #fff;
  padding: 22rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
}

.baseinfo-item {
  flex: 1;
  text-align: center;
}

.baseinfo-right {
  border-right: 1rpx solid #eee;
}

.grade {
  font-size: 30rpx;
  color: #ff8300;
}

.grade-em {
  font-size: 38rpx;
}

.grade-num {
  font-size: 26rpx;
  color: #9e9e9e;
}

.dispark {
  font-size: 32rpx;
  color: #383838;
}

.dispark-time {
  font-size: 26rpx;
  color: #9e9e9e;
}

.address {
  overflow: hidden;
  display: flex;
  padding: 22rpx 20rpx;
  line-height: 32rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.address-icon {
  width: 60rpx;
}

.address-info {
  flex: 1;
  min-width: 0;
}

.address-desc {
  font-size: 28rpx;
  color: #383838;
}

/* 特色玩法 */
.item-view {
  overflow: hidden;
  background: #fff;
  margin-bottom: 20rpx;
}

.item-title {
  position: relative;
  padding: 22rpx 36rpx;
  font-size: 30rpx;
  color: #383838;
  border-bottom: 1rpx solid #eaeaea;
}

.item-label {
  position: absolute;
  left: 22rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: #00bcd4;
}

.feature {
  padding: 22rpx 20rpx;
}

.feature-info {
  font-size: 28rpx;
  color: #616161;
  margin-bottom: 20rpx;
}

.feature-img {
  width: 100%;
  height: 420rpx;
  margin-bottom: 20rpx;
}

.feature-img image {
  width: 100%;
  height: 420rpx;
}